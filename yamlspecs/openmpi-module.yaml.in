# This "copies" the system openmpi module file  into a standard
# standard naming convention 
!include /opt/rcic/include/rcic-module.yaml
---
- package: openmpi module 
  category: compilers
  name: openmpi 
  pkgname: "{{ name }}-module"
  description: |
    Module file for system defined openmpi version {{ version }}. Changes with major OS version changes
  root: "{{ pkg_defaults.module.path }}"
  extension: 
  requires:
    - rcic-module-support
